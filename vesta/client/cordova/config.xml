<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.vesta.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
  <name>cordova</name>
  <description>
    cordovaTemplate generated by Vesta
  </description>
  <author email="info@vestarayanafzar.com" href="https://vestarayanafzar.com">
    Vesta Rayan Afzar
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="19"/>
  <preference name="BackupWebStorage" value="local"/>
  <preference name="Orientation" value="portrait"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="SplashScreenDelay" value="60000"/>
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="500"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <preference name="FullScreen" value="false"/>
    <preference name="AndroidPersistentFileLocation" value="Internal"/>
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root"/>
    <icon density="ldpi" src="www/img/icons/launcher-icon-0-75x.png"/>
    <icon density="mdpi" src="www/img/icons/launcher-icon-1x.png"/>
    <icon density="hdpi" src="www/img/icons/launcher-icon-1-5x.png"/>
    <icon density="xhdpi" src="www/img/icons/launcher-icon-2x.png"/>
    <icon density="xxhdpi" src="www/img/icons/launcher-icon-3x.png"/>
    <icon density="xxxhdpi" src="www/img/icons/launcher-icon-4x.png"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
    <preference name="iosPersistentFileLocation" value="Library"/>
    <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root"/>
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="www/img/icons/icon-60@3x.png" width="180" height="180"/>
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="www/img/icons/icon-60.png" width="60" height="60"/>
    <icon src="www/img/icons/icon-60@2x.png" width="120" height="120"/>
    <!-- iPad -->
    <icon src="www/img/icons/icon-76.png" width="76" height="76"/>
    <icon src="www/img/icons/icon-76@2x.png" width="152" height="152"/>
    <!-- Spotlight Icon -->
    <icon src="www/img/icons/icon-40.png" width="40" height="40"/>
    <icon src="www/img/icons/icon-40@2x.png" width="80" height="80"/>
    <!-- iOS 6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="www/img/icons/icon.png" width="57" height="57"/>
    <icon src="www/img/icons/icon@2x.png" width="114" height="114"/>
    <!-- iPad -->
    <icon src="www/img/icons/icon-72.png" width="72" height="72"/>
    <icon src="www/img/icons/icon-72@2x.png" width="144" height="144"/>
    <!-- iPad Pro -->
    <icon src="www/img/icons/icon-167.png" width="167" height="167"/>
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/img/icons/icon-small.png" width="29" height="29"/>
    <icon src="www/img/icons/icon-small@2x.png" width="58" height="58"/>
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/img/icons/icon-50.png" width="50" height="50"/>
    <icon src="www/img/icons/icon-50@2x.png" width="100" height="100"/>
    <!-- iPad Pro -->
    <icon src="www/img/icons/icon-83.5@2x.png" width="167" height="167"/>
    <splash src="res/screen/ios/Default@2x~universal~anyany.png"/>
    <splash src="res/screen/ios/Default@2x~universal~comany.png"/>
    <splash src="res/screen/ios/Default@2x~universal~comcom.png"/>
    <splash src="res/screen/ios/Default@3x~universal~anyany.png"/>
    <splash src="res/screen/ios/Default@3x~universal~anycom.png"/>
    <splash src="res/screen/ios/Default@3x~universal~comany.png"/>
  </platform>
  <engine name="android" spec="~6.1.2"/>
</widget>