{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "src/client/app/**/*.ts",
    "src/client/app/**/*.tsx"
  ],
  "exclude": [
    "resources/**/*"
  ]
}